<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-8 text-center">
      <div class="card-header">
        <h1 class="h4 animated zoomIn">
          <strong>Registro de cuenta</strong>
        </h1>
      </div>
      <div class="card-body">
        <form action="/users/signup" method="POST">
          <div class="form-group">
            <input type="text" class="form-control animated zoomIn" name="name" placeholder="Nombre" value="{{name}}">
          </div>
          <div class="form-group">
            <input type="email" class="form-control animated zoomIn" name="email" placeholder="Correo" value="{{email}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control animated zoomIn" name="password" placeholder="Contraeña" value="{{password}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control animated zoomIn" name="confirm_password" placeholder="Confirmar Contraseña" value="{{confirm_password}}">
          </div>
          <button class="btn btn-primary btn-block animated zoomIn">
            Regístrate
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
