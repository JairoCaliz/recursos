<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Nuevas Atracciones</h3>
    </div>
    <div class="card-body">
      <form action="/atracciones/new-atraccione" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <input type="text" name="title" class="form-control" placeholder="Titulo" autofocus/>
        </div>
        <div class="form-group">
          <textarea name="description" class="form-control" placeholder="Descripción"></textarea>
        </div>
        <div class="form-group">
          <input type="text" name="place" class="form-control" placeholder="Ubicación" autofocus/>
        </div>
        <div class="input-group mb-3">
          <div class="custom-file">
            <input type="file" name="image" class="custom-file-input" id="inputGroupFile02">
            <label class="custom-file-label" for="inputGroupFile02" aria-describedby="inputGroupFileAddon02"></label>
            </div>        
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
