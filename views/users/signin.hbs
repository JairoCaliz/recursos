<div class="row">
  <div class="col-md-8 mx-auto">
    <div class="card mt-8 text-center">
      <div class="card-header">
        <h1 class="h4 animated zoomIn">
          <strong>Cuenta de Ingreso</strong>
        </h1>
      </div>
        <img class="animated zoomIn rounded-square mx-auto d-block logo m-8" src="/img/logo.jpg" alt="Logo">
      <div class="card-body">
        <form action="/users/signin" method="POST">
          <div class="form-group">
            <input type="email" class="form-control animated zoomIn" name="email" placeholder="Correo" autofocus>
          </div>
          <div class="form-group">
            <input type="password" class="form-control animated zoomIn" name="password" placeholder="Contraseña">
          </div>
          <button class="btn btn-primary btn-block animated zoomIn">
            Iniciar Sesión
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
